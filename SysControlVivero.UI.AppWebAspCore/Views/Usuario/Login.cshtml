<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="~/css/site.css" >
    <link rel="stylesheet" href="~/SysControlVivero.UI.AppWebAspCore.styles.css" asp-append-version="true" />
    <title>Login</title>
</head>
<body class=Login>

    <section>

        <div class="form-box">
            <div class="form-value">
                <form asp-action="Login">
                    <h2>Login</h2>

                    <div class="inputbox">
                        <i class="fa-regular fa-envelope icon"></i>
                        <input asp-for="Login" type="text" required>
                        <label asp-for="Login"></label>
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                   

                    <div class="inputbox">
                        <i class="fa-solid fa-lock icon"></i>
                        <input asp-for="Password" type="password" required>
                        <label asp-for=Password></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button input type="submit" value="Login">Login</button>
                    <span class="text-danger">@ViewBag.Error</span>     
                </form>
            </div>
        </div>

    </section>

   
</body>
</html>

